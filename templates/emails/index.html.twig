{% extends 'base.html.twig' %}

{% block title %}Contact{{parent()}}
{% endblock %}

{% block body %}
	<div class="background">
		<h1 class="topTitle my-0">Envoyer un message</h1>
	{# <div class="containerSendEmail"> #}
		<div class="containerMainTop">
			{{ form_start (form) }}
			{# <div class="containerMessage"> #}
				<div class='emailFrom'>
					<p class="emailFromTitle">De:</p>
					{{ form_widget(form.from, {'value':  app.user.email  }) }}
				</div>
				<div class='emailTo'>
					<p class="emailToTitle">Ã€:</p>
					{{ form_widget(form.to, {'value':  user.email  }) }}
				</div>
				<div class='text-center'>
					<p class="emailSubjectTitle">Sujet:</p> 
					{{ form_widget(form.subject, {'attr': {'placeholder': 'Sujet du Message'}}) }}
				</div>
				<div class='emailText'>
					<p class="emailTextTitle">Message: </p>
					{{ form_widget(form.html, {'attr': {'placeholder': 'Votre Message'}}) }}
				</div>
				<div class="col-6 mx-auto d-flex flex-column">
					<a class="SendAMessageSubmitButton btn btn-success mb-2" href="/mail"><input class="account-block-next-button" name="" type="submit" value="Envoyer"></a>
					<a class="btn btn-success" href="{{ path('user_show', {'slug': user.slug}) }}">Retour</a>
				</div>
				{{ form_end (form) }}
			{# </div> #}
			<div class="blankSendMessagePage"></div>
		{# </div> #}
    </div>
	{% endblock %}
