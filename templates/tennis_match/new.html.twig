{% extends 'base.html.twig' %}

{% block title %}Nouveau Match • TenCourt{% endblock %}

{% block body %}

<div class='background'>
<h1 class="topTitle my-0">Créer un Match</h1>
   <div class="containerMainTop">
        <div class="createMatchForm text-center">
            {{ form_start(tennismatchform) }}
          
                <div class="createMatchItemForm">
                    {{ form_row(tennismatchform.name) }}
                </div>
                <div class="createMatchItemForm">
                    {{ form_row(tennismatchform.level) }}
                </div>
                <div class="createMatchDateItemForm">
                    {{ form_row(tennismatchform.eventDate) }}
                </div>
                <div class="createMatchDateItemForm">
                    {{ form_row(tennismatchform.startHour) }}
                </div>
                <div class="createMatchDateItemForm">
                    {{ form_row(tennismatchform.endHour) }}
                </div>
                <div class="createMatchItemForm">
                    {{ form_row(tennismatchform.adress) }}
                </div>
                <div class="createMatchItemForm">
                    {{ form_row(tennismatchform.description) }}
                </div>
                <div class="createMatchSaveItemForm">
                    <button class="btn col-6">{{ button_label|default('Créer le match') }}</button>
                </div>
            </div>
            {{ form_end(tennismatchform) }}
        </div>
    </div>
</div>
{% endblock %}
