<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <title>{% block title %}TenCourt{% endblock %}</title>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    {% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% endblock %}
</head>
<body>


{% block body %}

{% endblock %}

{% block navbar %}
    <nav class="containerNavbar">
        <ul class="navbar">
            <a href="{{ path('tennis_match_new', {'slug': app.user.slug}) }}" class="navButton"><li class="addAnnounce"><img class="logoNavBar" src="{{ app.request.pathinfo == path('tennis_match_new',{'slug': app.user.slug}) ? asset('build/images/navbar/active/addactive.png') : asset('build/images/navbar/add.png') }}"></li></a>
            <a href="{{ path('search_users') }}" class="navButton"><li class="search"><img class="logoNavBar" src="{{ app.request.pathinfo == path('search_users') ? asset('build/images/navbar/active/searchactive.png') : asset('build/images/navbar/search.png') }}"></li></a>
            <a href="{{ path('search_matches') }}" class="navButton"><li class="location"><img class="logoNavBar" src="{{ app.request.pathinfo == path('search_matches') ? asset('build/images/navbar/active/locationactive.png') : asset('build/images/navbar/location.png') }}"></li></a>
            <a href="{{ path('user_profile', {'slug': app.user.slug}) }}"class="navButton" ><li class="userDirection"><img class="logoNavBar" src="{{ app.request.pathinfo == path('user_profile', {'slug': app.user.slug}) ? asset('build/images/navbar/active/profileactive.png') : asset('build/images/navbar/profile.png') }}"></li></a>
        </ul>
    </nav>
{% endblock %}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script> {{ encore_entry_script_tags('app') }}
</body>
</html>
