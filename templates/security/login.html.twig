<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}Connexion • Tencourt
			{% endblock %}
		</title>
		<meta name="viewport" content="initial-scale=1, maximum-scale=1">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<style>
				body {
					overflow: hidden
				}
			</style>
		{% endblock %}
	</head>
	<body>
		{% block body %}
			<div class="homepageLogin">

				<div class="containerLoginWelcomeMessage">
					<img class="logo-login" src="{{asset('build/images/logo-tencourt.png')}}"/>
					<div class="containerMain col-10 mx-auto col-md-6 col-xl-4 pb-5">
						<form method="post">
							<h1 class="h3 mb-3 font-weight-normal loginTitleForm">Se connecter</h1>
							<label class="loginLabelEmail pb-2" for="inputEmail">Adresse Email : test@monsite.com</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control LoginEmailInput" required autofocus>
							<label class="loginLabelPassword pb-2" for="inputPassword">Mot de passe : password</label>
							<input type="password" name="password" id="inputPassword" class="form-control LoginPasswordInput" required>
							<input
							type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							{#
														                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
														                See https://symfony.com/doc/current/security/remember_me.html
														
														                <div class="checkbox mb-3">
														                    <label>
														                        <input type="checkbox" name="_remember_me"> Remember me
														                    </label>
														                </div>
														            #}
							<button class="btn btn-lg btn-success LoginSubmitButton" type="submit">Connexion</button>
						
						</div>
					</form>
				</div>
				{% if app.user %}
					<div class="mb-3 loginConnected">
						Tu es connecté sous
						{{ app.user.email }},
						<a href="{{ path('app_logout') }}">Déconnexion</a>
					</div>
				{% endif %}
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}


				<a class="registrationBackButton" href="{{ path('home') }}">Retour</a>
			</div>
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
